<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ollama Recipes Copilot</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/png" href="~/images/christmas-favicon.png" />
</head>
<body>
    <header>
        <div class="container">
            <img src="~/images/christmas-logo.png" alt="Christmas Logo" class="logo" />
            <h1>Recipes Copilot,- Christmas Edition!</h1>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Ollama Recipes Copilot - Wishing you a joyful holiday season! -
            <a href="@Url.Action("Credits", "Home")">View Credits</a>



        
    </footer>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
